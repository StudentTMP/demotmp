@model List<DocumentApp.Models.DocumentoViewModel>
<table class="table table-bordered">
    <tr>
        <th style="width: 10px">#</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <th style="width: 40px">Acci&oacute;n</th>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.nro</td>
                <td>@item.documento</td>
                <td>@item.tipoDocumento</td>
                <td>
                    <a class="btn btn-sm bg-blue-gradient">
                        <i class="fa fa-download sm" aria-hidden="true"></i> Descargar
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">No se encontraron Documentos</td>
        </tr>
    }
</table>